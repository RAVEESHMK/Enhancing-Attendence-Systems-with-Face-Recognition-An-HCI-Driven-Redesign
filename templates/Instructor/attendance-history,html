    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const courseId = {{ course.id }};

        // Load attendance stats for each date
        document.querySelectorAll('.view-details').forEach(btn => {
            const date = btn.dataset.date;
            loadAttendanceStats(date, btn.closest('tr'));
        });

        function loadAttendanceStats(date, row) {
            fetch(`/api/attendance-stats/${courseId}/${date}`)
                .then(response => response.json())
                .then(data => {
                    const cells = row.cells;
                    cells[1].innerHTML = `
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-success" 
                                 style="width: ${data.attendance_rate}%">
                                ${data.attendance_rate}%
                            </div>
                        </div>
                    `;
                    cells[2].textContent = data.present_count;
                    cells[3].textContent = data.total_students;
                })
                .catch(error => {
                    console.error('Error loading stats:', error);
                });
        }

        // View details button
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('view-details')) {
                const date = e.target.dataset.date;
                const modal = new bootstrap.Modal(document.getElementById('detailsModal'));
                
                fetch(`/api/attendance-stats/${courseId}/${date}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('modalDate').textContent = data.date;
                        document.getElementById('modalRate').textContent = data.attendance_rate + '%';
                        document.getElementById('modalPresent').textContent = data.present_count;
                        document.getElementById('modalTotal').textContent = data.total_students;
                        document.getElementById('modalAbsent').textContent = data.total_students - data.present_count;
                        
                        const tbody = document.getElementById('modalAttendanceBody');
                        tbody.innerHTML = data.records.map(record => `
                            <tr>
                                <td>${record.student_name}</td>
                                <td>
                                    <span class="badge ${record.status === 'present' ? 'bg-success' : 'bg-danger'}">
                                        ${record.status}
                                    </span>
                                </td>
                                <td>${record.timestamp}</td>
                                <td>${record.confidence || 'N/A'}%</td>
                            </tr>
                        `).join('');
                        
                        modal.show();
                    });
            }
        });
    </script>
